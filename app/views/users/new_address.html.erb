<section>
	<form

<%= form_tag '/registration/address', method: :post do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name %>

  <%= label_tag :address %>
  <%= text_field_tag :address, @address.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @address.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @address.state %>

  <%= label_tag :zip %>
  <%= number_field_tag :zip, @address.zip %>

  <%= submit_tag 'Register' %>
<% end %>

</form>
</section>
