<%= form_tag path, method: method do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, @address.name %>

  <%= label_tag :address %>
  <%= text_field_tag :address, @address.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @address.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @address.state %>

  <%= label_tag :zip %>
  <%= number_field_tag :zip, @address.zip %>

	<%= label_tag :nickname %>
  <%= select_tag :nickname, options_for_select(['Home', 'Work', 'School', 'Other']) %>

  <%= submit_tag button_text %>
<% end %>
